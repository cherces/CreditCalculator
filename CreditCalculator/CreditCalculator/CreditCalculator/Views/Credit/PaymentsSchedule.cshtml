@model CreditCalculator.Models.CreditCalculateResultViewModel

@{
    ViewData["Title"] = "График платежей";
}

<div class="container mt-4">
    <h2>График платежей</h2>
    <table class="table table-bordered table-striped mt-3">
        <thead class="thead-dark">
        <tr>
            <th>№</th>
            <th>Дата</th>
            <th>Платёж</th>
            <th>Основной долг</th>
            <th>Проценты</th>
            <th>Остаток долга</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Schedule)
        {
            <tr>
                <td>@item.PaymentNumber</td>
                <td>@item.PaymentDate.ToString("dd.MM.yyyy")</td>
                <td>@item.Amount</td>
                <td>@item.PrincipalAmount</td>
                <td>@item.InterestAmount</td>
                <td>@item.DebtAmount</td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr class="table-success font-weight-bold">
            <td colspan="2">Итого:</td>
            <td>@Model.TotalPayment</td>
            <td colspan="3">Переплата: @Model.Overpayment</td>
        </tr>
        </tfoot>
    </table>

    <a asp-action="Calculator" class="btn btn-primary mt-3">Новый расчёт</a>
</div>